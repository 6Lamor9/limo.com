---
const {text,title,image} = Astro.props

---
<div
  class="card mycard2 card-compact md:scale-90 w-full md:w-96 rounded-none bg-base-100"
>
  <figure>
    <img src={image} alt="Shoes" class="md:rounded-xl" />
  </figure>
  <div class="card-body text-center">
    <h2 class="card-title">{title}</h2>
    <p class="text-lg">{text}</p>
  </div>
</div>
<style lang="sass">
  .mycard2
    opacity: 0
    transition: all 1s
    transform: translateX(100%)
    filter: blur(10px)
    &:nth-child(1)
        transition-delay: 0.1s
    &:nth-child(2)
        transition-delay: 0.2s
    &:nth-child(3)
        transition-delay: 0.3s
  .mycard2show
    opacity: 1
    filter: blur(0px)
    transform: translateX(0%)
</style>
